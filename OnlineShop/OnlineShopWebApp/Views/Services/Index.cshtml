@model List<ServiceVM>

@{
    ViewData["Title"] = "Сервис";
}

<h2 class="page-title">Услуги</h2>

<div class="container">
    <div class="row g-3">
        @foreach (var service in @Model)
        {
            <div class="col-sm-3">
                <div class="card shadow bg-white h-100">
                    <div class="d-flex justify-content-end p-2">
                        <button type="button" class="btn btn-outline-secondary btn-favorites-list ms-auto" onclick="AddProductToFavorites(`@Html.Raw(service.Id)`)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" class="bi bi-heart" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"></path>
                            </svg>
                        </button>
                    </div>

                    <img src="@service.Images[0].Path" class="card-img-top p-3" alt="@service.Name">

                    <div class="card-body d-flex flex-column">
                        <div class="card-title">
                                <a asp-controller="product" asp-action="index" asp-route-id="@service.Id" asp-route-category="@service.Category" class="card-link">@service.Name</a>
                        </div>
                        <div class="d-flex align-items-end mt-auto">
                            <h5 class="card-text"><b>@Math.Round(service.Price) ₽</b></h5>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div class="btn-group-vertical col-12 gap-2 pb-2">
                            <input type="button" class="btn btn-outline-secondary" onclick="AddProduct(`@Html.Raw(service.Id)`)" value="Добавить в корзину" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/js/services.js" asp-append-version="true"></script>