@model ServiceVM;
@inject MarkdownService MarkdownService

<div class="modal-header">
    <h5 class="modal-title">Просмотр услуги</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="text-center">
        <img src="@Model.Images[0].Path" class="p-4" alt="@Model.Name" height="250">
    </div>

    <h4 class="card-title">@Model.Name</h4>
    <h5 class="card-price"><b>@Math.Round(Model.Price) ₽</b></h5>

    @{
        var html = MarkdownService.Parse(@Model.Description);
        @Html.Raw(html)
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
</div>