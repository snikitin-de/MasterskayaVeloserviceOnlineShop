@model Authorization

<div class="container">
    <div class="row d-flex justify-content-center m-4 w-100">
        <div class="col-md-4 mx-auto">
            <div class="text-center mb-4">
                <h5 class="modal-title" id="loginLabel">Вход</h5>
            </div>
            <form id="authorizationForm" asp-area="account" asp-controller="authorization" asp-action="login" method="post">
                @Html.AntiForgeryToken()
                <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
                <input type="hidden" id="authReturnUrl" asp-for="AuthReturnUrl" />
                <div class="form-center-input-wrapper mb-3">
                    <label asp-for="Login">Логин<sup class="text-danger">*</sup></label>
                    <input type="text" asp-for="Login" class="form-control form-input" placeholder="Email адрес" />
                    <span asp-validation-for="Login" class="text-danger" />
                </div>
                <div class="form-center-input-wrapper mb-3">
                    <label asp-for="Password">Пароль<sup class="text-danger">*</sup></label>
                    <input type="password" asp-for="Password" class="form-control form-input" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
                <div class="form-check d-flex justify-content-center chk-should-remember-me mb-3">
                    <input class="form-check-input" type="checkbox" value="true" id="shouldRememberMe" name="shouldRememberMe">
                    <label class="form-check-label" for="shouldRememberMe">&nbsp;Запомнить меня?</label>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" id="btnLogin" class="btn btn-dark w-50 btn-authorization">Войти</button>
                </div>
            </form>
            <div class="d-flex justify-content-center">
                <a href="#" class="btn btn-outline-dark btn-registration register" data-register-id="registerId">Регистрация нового пользователя</a>
            </div>
            <div class="modal fade" id="registrationPartModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content" id="registrationPartModalContent">
                        <!-- Содержимое будет загружено через AJAX -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/showAuthorizationForm.js" asp-append-version="true"></script>
<script src="~/js/showUnauthorizedRegistrationForm.js" asp-append-version="true"></script>